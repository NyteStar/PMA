@using PMA.Models
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <style>
        * {
            box-sizing: border-box;
        }

        /* Create two unequal columns that floats next to each other */

        .column {
            float: left;
            height: auto;
            padding: 10px;
        }

        .left {
            width: 75%;
        }

        .right {
            width: 25%;
        }

        /* Clear floats after the columns */

        .row:after {
            clear: both;
            content: "";
            display: table;
        }
    </style>
</head>

<body>
    <div class="row">
        <div class="column left" style="background-color: #aaa;">
            <div class="container">
                <h3>Invite Requests</h3>
                <table class="blueTable">
                    <thead>
                        <tr>
                            <th>Project Name</th>
                            <th>Description</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Name</td>
                            <td>Desc.</td>
                            <td><button style="color: black" onclick="">Accept</button><button style="color: black" onclick="">Reject</button></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="container">
                <h3>Current Projects</h3>
                <table class="steelBlueCols">
                    <thead>
                        <tr>
                            <th>Project ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Drop Request</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Project item in Model.Projects)
                        {
                            if (item.PCompleted is false)
                            {
                                <tr>
                                    <td>@item.p_ID</td>
                                    <td>@item.pName</td>
                                    <td>@item.pDesc</td>
                                    <td><button style="color: black" onclick="">Drop</button></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div class="container">
                <h3>Previous Delivered Projects</h3>
                <table class="steelBlueCols">
                    <thead>
                        <tr>
                            <th>Project ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>head4</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Project item in Model.Projects)
                        {
                            if (item.PCompleted is true)
                            {
                                <tr>
                                    <td>@item.p_ID</td>
                                    <td>@item.pName</td>
                                    <td>@item.pDesc</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="column right" style="background-color: #bbb;">
            <div class="container">
                <div class="row">
                    <img src="data:image/png;base64,@(Convert.ToBase64String(Model.Developer.image))" height="250" width="250" class="img-rounded img-responsive">
                </div>
                <div class="col-sm-6 col-md-8">
                    <h3>@Model.Developer.firstName @Model.Developer.lastName</h3>
                    <p>

                        <i class="glyphicon glyphicon-envelope"></i>@Model.Developer.email
                        <br />
                        <i class="glyphicon glyphicon-phone"></i>@Model.Developer.phoneNo
                        <br />
                        <i class="glyphicon glyphicon-file"></i>@Model.Developer.job
                        <br />
                    </p>
                    <p>
                        <div class="row" style="width:35%">
                            <strong>Skills: </strong>
                            @foreach (Skill item in Model.Skills)
                            {
                                <span class="tags">@item.s_Name</span>
                            }


                        </div>
                    </p>
                </div>
            </div>
        </div>
    </div>
</body>